<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/Widget.PaleoRecipes.Toolbar"
        app:title="PaleoRecipes" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Logo -->
            <ImageView
                android:id="@+id/logo_image_view"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:contentDescription="@string/logo_description"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/paleo_logo" />

            <!-- Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonVisitSocials"
                style="@style/Widget.PaleoRecipes.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="@color/primary_dark"
                android:text="VISIT PALEO BY LEO"
                android:gravity="center"
                android:textColor="@color/on_primary"
                android:textSize="12sp"
                app:icon="@android:drawable/ic_menu_share"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/on_primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonAddRecipe"
                style="@style/Widget.PaleoRecipes.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="@color/primary_dark"
                android:text="ADD A RECIPE"
                android:gravity="center"
                android:textColor="@color/on_primary"
                android:textSize="12sp"
                app:icon="@android:drawable/ic_menu_add"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/on_primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMyRecipes"
                style="@style/Widget.PaleoRecipes.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="@color/primary_dark"
                android:text="VIEW YOUR RECIPES"
                android:gravity="center"
                android:textColor="@color/on_primary"
                android:textSize="12sp"
                app:icon="@android:drawable/ic_menu_view"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/on_primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonEditRecipes"
                style="@style/Widget.PaleoRecipes.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="@color/primary_dark"
                android:text="EDIT RECIPES"
                android:gravity="center"
                android:textColor="@color/on_primary"
                android:textSize="12sp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/on_primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMyFridge"
                style="@style/Widget.PaleoRecipes.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="@color/primary_dark"
                android:text="MY FRIDGE"
                android:gravity="center"
                android:textColor="@color/on_primary"
                android:textSize="12sp"
                app:icon="@android:drawable/ic_menu_manage"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/on_primary" />

        </LinearLayout>
    </ScrollView>

    <!-- Copyright Text - Fixed at Bottom -->
    <TextView
        android:id="@+id/copyright_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:gravity="center"
        android:padding="16dp"
        android:text=" 2025 Paleo by Leo. MIT License."
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</LinearLayout>
