<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/main_background">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/paleo_logo"
        android:contentDescription="App Logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paleo by Leo Recipes"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="36dp"/>

    <!-- Primary Actions Group -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Your Own Recipe"
            android:padding="16dp"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_add"
            app:iconGravity="textStart"
            android:layout_marginBottom="16dp"
            style="@style/OrangeButtonStyle"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewRecipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visit Paleo by Leo Socials"
            android:padding="16dp"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_share"
            app:iconGravity="textStart"
            style="@style/OrangeButtonStyle"/>
    </LinearLayout>

    <!-- Secondary Actions Group -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Your Recipes"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#555555"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewUserRecipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Your Own Recipes"
            android:padding="12dp"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_view"
            app:iconGravity="textStart"
            android:layout_marginBottom="12dp"
            style="@style/OrangeButtonStyle"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditRecipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Your Own Recipes"
            android:padding="12dp"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconGravity="textStart"
            android:layout_marginBottom="12dp"
            style="@style/OrangeButtonStyle"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrintRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Print Your Own Recipe"
            android:padding="12dp"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_send"
            app:iconGravity="textStart"
            style="@style/OrangeButtonStyle"/>
    </LinearLayout>

    <!-- About Section -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Paleo Diet"
        android:padding="12dp"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_menu_info_details"
        app:iconGravity="textStart"
        android:layout_marginBottom="24dp"
        style="@style/OrangeButtonStyle"/>

    <!-- Copyright notice at the bottom -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright Â© 2025 MIT License"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="8dp"/>

</LinearLayout>