<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="?android:attr/colorBackground"
    android:theme="@style/Theme.PaleoRecipes">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/paleo_logo"
        android:contentDescription="App Logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paleo by Leo Recipes"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnBackground"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="36dp"/>

    <!-- Primary Actions Group -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddRecipe"
            style="@style/Widget.PaleoRecipes.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Your Own Recipe"
            android:paddingVertical="16dp"
            android:paddingHorizontal="24dp"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_add"
            app:iconGravity="start"
            app:iconPadding="8dp"
            android:layout_marginBottom="16dp"
            app:backgroundTint="@color/primary"
            android:textColor="@color/on_primary"
            app:iconTint="@color/on_primary"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewRecipes"
            style="@style/Widget.PaleoRecipes.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visit Paleo by Leo"
            android:paddingVertical="16dp"
            android:paddingHorizontal="24dp"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_share"
            app:iconGravity="start"
            app:iconPadding="8dp"
            app:backgroundTint="@color/primary"
            android:textColor="@color/on_primary"
            app:iconTint="@color/on_primary"/>
    </LinearLayout>

    <!-- Secondary Actions Group -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Your Recipes"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewUserRecipes"
            style="@style/Widget.PaleoRecipes.Button.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Your Own Recipes"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_view"
            app:iconGravity="start"
            app:iconPadding="8dp"
            android:layout_marginBottom="12dp"
            app:strokeColor="@color/primary"
            app:strokeWidth="1dp"
            android:textColor="?android:attr/textColorPrimary"
            app:iconTint="?android:attr/textColorPrimary"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditRecipes"
            style="@style/Widget.PaleoRecipes.Button.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Your Own Recipes"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconGravity="start"
            app:iconPadding="8dp"
            android:layout_marginBottom="12dp"
            app:strokeColor="@color/primary"
            app:strokeWidth="1dp"
            android:textColor="?android:attr/textColorPrimary"
            app:iconTint="?android:attr/textColorPrimary"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrintRecipe"
            style="@style/Widget.PaleoRecipes.Button.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Print Your Own Recipe"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_set_as"
            app:iconGravity="start"
            app:iconPadding="8dp"
            app:strokeColor="@color/primary"
            app:strokeWidth="1dp"
            android:textColor="?android:attr/textColorPrimary"
            app:iconTint="?android:attr/textColorPrimary"/>
    </LinearLayout>

    <!-- About Section -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAbout"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Paleo Diet"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_menu_info_details"
        app:iconGravity="start"
        app:iconPadding="8dp"
        android:layout_marginBottom="24dp"
        android:textColor="@color/primary"
        app:iconTint="@color/primary"/>

    <!-- Copyright notice at the bottom -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright Â© 2025 MIT License"
        android:textSize="12sp"
        android:textColor="?android:attr/textColorTertiary"
        android:layout_marginTop="8dp"/>

</LinearLayout>
