<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- External files -->
    <external-files-path
        name="external_files"
        path="." />

    <!-- External media -->
    <external-files-path
        name="external_media"
        path="Pictures/" />

    <!-- External downloads -->
    <external-files-path
        name="external_downloads"
        path="Download/" />

    <!-- External DCIM -->
    <external-files-path
        name="external_dcim"
        path="DCIM/" />

    <!-- Cache directory -->
    <cache-path
        name="cache"
        path="." />

    <!-- Cache for images -->
    <cache-path
        name="image_cache"
        path="image_cache/" />

    <!-- Root of external storage -->
    <external-path
        name="external"
        path="." />

    <!-- Root of external storage for Android 10+ -->
    <external-path
        name="external_storage_root"
        path="/" />

    <!-- Files directory -->
    <files-path
        name="files"
        path="." />

    <!-- Internal files directory -->
    <files-path
        name="my_images"
        path="images/" />

    <!-- External public pictures directory -->
    <external-path
        name="external_public_pictures"
        path="Pictures" />

    <!-- External public downloads directory -->
    <external-path
        name="external_public_downloads"
        path="Download" />

    <!-- External public DCIM directory -->
    <external-path
        name="external_public_dcim"
        path="DCIM" />

    <!-- Support for raw file system access if needed -->
    <root-path
        name="root"
        path="." />

    <!-- For accessing files in the app's external cache directory -->
    <external-cache-path
        name="external_cache"
        path="." />
    <files-path
        name="files"
        path="." />
</paths>
